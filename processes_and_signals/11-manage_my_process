#!/usr/bin/env bash
#bu skript "manage_my_process" daemonunu idare edir
PIDFILE="/var/run/my_process.pid"
SCRIPT="/usr/bin/env bash manage_my_process"

case "$1" in
  start)
    # manage_my_process-i background-da işə sal
    $SCRIPT &
    # Son fon prosesi PID-i
    echo $! > "$PIDFILE"
    echo "manage_my_process started"
    ;;
  stop)
    if [ -f "$PIDFILE" ]; then
      PID=$(cat "$PIDFILE")
      if kill "$PID" 2>/dev/null; then
        rm -f "$PIDFILE"
        echo "manage_my_process stopped"
      else
        # Proses artıq yoxdur, amma yenə də PID faylını silək
        rm -f "$PIDFILE"
        echo "manage_my_process stopped"
      fi
    else
      # PID faylı yoxdursa, sadəcə mesaj ver
      echo "manage_my_process stopped"
    fi
    ;;
  restart)
    # stop hissəsi
    if [ -f "$PIDFILE" ]; then
      PID=$(cat "$PIDFILE")
      kill "$PID" 2>/dev/null || true
      rm -f "$PIDFILE"
    fi
    # start hissəsi
    $SCRIPT &
    echo $! > "$PIDFILE"
    echo "manage_my_process restarted"
    ;;
  *)
    echo "Usage: manage_my_process {start|stop|restart}"
    ;;
esac

