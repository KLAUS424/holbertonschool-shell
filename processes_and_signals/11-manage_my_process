#!/usr/bin/env bash
# Bu skript "manage_my_process" daemonunu idarÉ™ edir: start, stop, restart.

PROCESS_NAME="manage_my_process"
PID_FILE="/var/run/my_process.pid"

stop_process() {
    if [ -f "$PID_FILE" ]; then

        PID=$(cat "$PID_FILE")

        kill "$PID" 2>/dev/null
        rm -f "$PID_FILE"
        echo "$PROCESS_NAME stopped"
    fi
}

start_process() {
    ./"$PROCESS_NAME" &

    NEW_PID=$(pgrep -f "^./$PROCESS_NAME\$")
    
    echo "$NEW_PID" > "$PID_FILE"
    echo "$PROCESS_NAME started"
}

case "$1" in
    start)
        start_process
        ;;
    
    stop)
        stop_process
        ;;
        
    restart)
        stop_process
        
        start_process
        
        echo "$PROCESS_NAME restarted"
        ;;
        
    *)
        echo "Usage: $PROCESS_NAME {start|stop|restart}"
        exit 1
        ;;
esac

exit 0
